public/**/**.jpeg filter=lfs diff=lfs merge=lfs -text
public/**/**.gif filter=lfs diff=lfs merge=lfs -text
public/**/**.webp filter=lfs diff=lfs merge=lfs -text
public/**/**.svg filter=lfs diff=lfs merge=lfs -text
public/**/**.mp4 filter=lfs diff=lfs merge=lfs -text
public/**/**.mov filter=lfs diff=lfs merge=lfs -text
public/**/**.webm filter=lfs diff=lfs merge=lfs -text
public/**/**.wav filter=lfs diff=lfs merge=lfs -text
